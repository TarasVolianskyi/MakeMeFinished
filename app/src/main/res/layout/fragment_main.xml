<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_login_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv-token"/>

    <Button
        android:id="@+id/btn_logout_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout" />

    <EditText
        android:id="@+id/et_text_for_entering_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New task" />

    <Spinner
        android:id="@+id/spinner_categories_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/genres_items"></Spinner>

    <Button
        android:id="@+id/btn_add_task_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add task" />

    <ListView
        android:id="@+id/lv_data_of_tasks_from_firebase_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3623739700338204/6622720117">
    </com.google.android.gms.ads.AdView>


</LinearLayout>