<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_text_for_entering_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New task"/>

    <Spinner
        android:id="@+id/spinner_categories_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/genres_items"></Spinner>

    <Button
        android:id="@+id/btn_add_task_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add task"/>

    <ListView
        android:id="@+id/lv_data_of_tasks_from_firebase_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>